---
permalink: /sitemap-posts.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="{{ site.url }}/sitemap.xsl"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  {% for post in ghost.posts | sort(reverse = true, attribute = "updated_at") %}
    <url>
      <loc>{{ site.url + post.path }}</loc>
      <lastmod>{% utcDateFormatter post.updated_at %}</lastmod>
      {% if post.feature_image %}
        <image:image>
          <image:loc>{{ post.feature_image }}</image:loc>
          <image:caption>fcc-banner.jpg</image:caption>
        </image:image>
      {% endif %}
    </url>
  {% endfor %}
</urlset>
