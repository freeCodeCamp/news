            <a class="site-nav-logo" href="{{ site.url }}">{{ site.title }}</a>
        {% endif %}
    </div>
    <div class="site-nav-right">
        <div class="nav-group">
            <a
                class="nav-forum"
                id="nav-forum"
                rel="noopener noreferrer"
