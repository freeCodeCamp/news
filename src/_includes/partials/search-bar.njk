{% set searchPlaceholder %}
    {% if site.roundedTotalRecords < 100 %}
        {%- t 'search.placeholder.default' -%}
    {% else %}
        {%- t 'search.placeholder.numbered', {
            roundedTotalRecords: site.roundedTotalRecordsLocalizedString
        } -%}
    {% endif %}
{% endset %}
<form id="search-form" data-test-label="search-bar">
    <div role="search" class="searchbox__wrapper">
        <label class="fcc_sr_only" for='search-input'>
            {% t 'search.label' %}
        </label>
        <input type="search" placeholder="{{ searchPlaceholder }}" id="search-input" />
        <button type="submit" class="ais-SearchBox-submit">
            {% include "partials/icons/magnifying-glass.njk" %}
            <span class="fcc_sr_only">{% t 'search.accessible-name' %}</span>
        </button>
        <div id='dropdown-container'></div>
    </div>
</form>
