<!DOCTYPE html>
<html lang="{{ "zh-cn" if site.lang == "zh" else site.lang }}">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        {# Fall back to localized meta title if no specific title is set from a post, page, etc. #}
        {% if title %}
            <title>{{ title }}</title>
        {% else %}
            <title>{% t 'meta:title' %}</title>
        {% endif %}
        <meta name="HandheldFriendly" content="True" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'" href="https://cdn.freecodecamp.org/news-assets/prism-1-16-0/prism.min.css" />
        <noscript><link rel="stylesheet" href="https://cdn.freecodecamp.org/news-assets/prism-1-16-0/prism.min.css"></noscript>
        <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'"
            href="https://cdn.freecodecamp.org/news-assets/prism-1-16-0/prism-unescaped-markup.css" />
        <noscript><link rel="stylesheet" href="https://cdn.freecodecamp.org/news-assets/prism-1-16-0/prism-unescaped-markup.css"></noscript>

        <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'" href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Roboto+Mono:400,700?&display=swap">

        {# News Theme Styles #}
        <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'" href="{{ '/assets/css/global.css' | url }}" />
        <link rel="stylesheet" type="text/css" href="{{ '/assets/css/screen.css' | url }}" />
        <link rel="stylesheet" type="text/css" href="{{ '/assets/css/search-bar.css' | url }}" />

        {# Algolia search assets #}
        <script defer src="https://cdn.freecodecamp.org/news-assets/algolia/algoliasearch-3-33-0/algoliasearch.min.js"></script>
        <script defer src="https://cdn.freecodecamp.org/news-assets/algolia/autocomplete-0-36-0/autocomplete.min.js"></script>

        {# Day.js and plugins for localization and formatting #}
        <script defer src="https://cdn.freecodecamp.org/news-assets/dayjs/1.10.4/dayjs.min.js"></script>
        <script defer src="https://cdn.freecodecamp.org/news-assets/dayjs/1.10.4/localizedFormat.min.js"></script>
        <script defer src="https://cdn.freecodecamp.org/news-assets/dayjs/1.10.4/relativeTime.min.js"></script>

        {# Day.js locales #}
        <script defer src="https://cdn.freecodecamp.org/news-assets/dayjs/1.10.4/locale/zh.min.js"></script>
        <script defer src="https://cdn.freecodecamp.org/news-assets/dayjs/1.10.4/locale/es.min.js"></script>

        {# Lazysizes #}
        <script defer type="text/javascript" src="{{ '/assets/js/lazysizes.min.js' | url }}"></script>

        <meta name="keywords" content="{% t 'meta:keywords' %}">
        <meta name="description" content="{% block description %}{% t 'meta:description' %}{% endblock %}">
        <link rel="icon" href="https://cdn.freecodecamp.org/universal/favicons/favicon.ico" type="image/png">
        <link rel="canonical" href="{{ site.url }}">
        <meta name="referrer" content="no-referrer-when-downgrade">

        {% set nextPageRegExp = r/\/\d+\/$/g %}

        {% if pagination.nextPageHref and nextPageRegExp.test(pagination.nextPageHref) %}
            {# Updated dynamically by src/_includes/pagination.js #}
            <link rel="next" href="">
        {% endif %}

        {% block seo %}
            {# Facebook OpenGraph #}
            <meta property="og:site_name" content="{{ site.title }}">
            <meta property="og:type" content="website">
            <meta property="og:title" content="{{ site.title }}">
            <meta property="og:description" content="{% t 'meta:description' %}">
            <meta property="og:url" content="{{site.url + page.url}}">
            <meta property="og:image" content="{{ site.cover_image }}">
            <meta property="article:publisher" content="https://www.facebook.com/freecodecamp">

            {# Twitter Card #}
            <meta name="twitter:card" content="summary_large_image">
            <meta name="twitter:title" content="{{ site.title }}">
            <meta name="twitter:description" content="{% t 'meta:description' %}">
            <meta name="twitter:url" content="{{ site.url + page.url }}">
            <meta name="twitter:image" content="{{ site.cover_image }}">
            <meta name="twitter:site" content="{{ site.twitter }}">

            <meta property="og:image:width" content="{{ site.image_dimensions.cover_image.width }}">
            <meta property="og:image:height" content="{{ site.image_dimensions.cover_image.height }}">
        {% endblock %}

        {% block jsonLd %}
        {% endblock %}

        <meta name="generator" content="Eleventy">
        <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.url + "/rss/" }}">

        {{ site.codeinjection_head | safe if site.codeinjection_head }}
        {{ codeinjection_head | safe if codeinjection_head }}
    </head>

    <body class="home-template">
        <div class="site-wrapper">
            {% include "partials/site-nav.njk" %}

            {# CTA banner #}
            {% include "partials/banner.njk" %}

            <div id="error-message"></div>

            {% block content %}
            {% endblock content %}

            {% include "partials/footer.njk" %}
        </div>

